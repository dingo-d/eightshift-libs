{
	"name": "@infinum/eightshift-libs",
	"version": "5.0.2",
	"description": "WordPress libs developed by Eightshift team to use in modern WordPress.",
	"author": {
		"name": "Eightshift team",
		"email": "team@eightshift.com",
		"homepage": "https://eightshift.com/",
		"role": "Developer / IT Manager"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/infinum/eightshift-libs.git"
	},
	"keywords": [
		"composer",
		"installer",
		"plugin",
		"blocks",
		"Gutenberg",
		"WordPress"
	],
	"bugs": {
		"url": "https://github.com/infinum/eightshift-frontend-libs/issues"
	},
	"scripts": {
		"lint": "composer standards:check -- --filter=gitstaged",
		"phpdocsBuild": "php phpdoc.phar --template .phpdoc",
		"docsBuild": "rm -rf docs && npm run phpdocsBuild",
		"docsDeploy": "npm run docsBuild && gh-pages -d docs"
	},
	"homepage": "https://eightshift.com/",
	"license": "MIT",
	"dependencies": {
		"gh-pages": "^3.2.3",
		"husky": "^4.3.6"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint"
		}
	}
}
